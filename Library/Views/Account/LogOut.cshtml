@using System.Security.Claims
@model Library.Models.User


@{
    ViewData["Title"] = "Выход";
}

<h1>Выход из аккаунта</h1>

<h2>Пользователь: @User.FindFirst(x => x.Type == "Surname").Value</h2>
<h3>Вы уверены, что хотите выйти из аккаунта</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            Номер читательского билета. 
        </dt>
        <dd class="col-sm-10">
            @User.FindFirst(x => x.Type == ClaimTypes.Name).Value
        </dd>

    </dl>

    <form asp-action="LogOut">
        <input type="submit" value="Выйти" class="btn btn-danger" /> |
        <a  asp-controller="Book" asp-action="Index">Вернуться к списку</a>
    </form>
</div>